{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    
    // Enable strict checking for quality
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Specify where TS files live and where to output them
    "rootDir": "./src", 
    "outDir": "./dist",
    
    // The bare minimum to recognize Node types
    "types": [
      "node" 
    ]
  },
  
  "include": [
    "src/**/*.ts",
    "prisma",
    ".env"
  ],
  
  "exclude": [
    "node_modules",
    "dist"
  ]
}